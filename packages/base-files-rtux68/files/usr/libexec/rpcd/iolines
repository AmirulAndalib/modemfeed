#!/bin/sh

. /usr/share/libubox/jshn.sh

BOARD=$(cat /tmp/sysinfo/hw)
KV2=4.365
KV4=8.219

case "$1" in
	list)
		echo '{' 
		echo '"raw": {"adc":"str"},'
		echo '"voltage": {"adc":"str"},'
		echo '"resist": {"adc":"str"}'
		echo '}'
	;;
	call)
		case "$2" in
			raw)
				read input;
				json_load "$input"
				json_get_var ADC adc
				if [[ "$ADC" == "all" ]]; then
					adc1=$(getinfo adc1)
					adc2=$(getinfo adc2)
					adc3=$(getinfo adc3)
					adc4=$(getinfo adc4)
					echo '{'
					echo "\"adc1\": \"$adc1\","
					echo "\"adc2\": \"$adc2\"",
					echo "\"adc3\": \"$adc3\"",
					echo "\"adc4\": \"$adc4\""
					echo '}'
				else
					adc1=$(getinfo $ADC)
					echo '{'
					echo "\"value\": \"$adc1\""
					echo '}'
				fi
			;;
			voltage)
				read input;
				json_load "$input"
				json_get_var ADC adc
				if [[ "$BOARD" = "v2" ]]; then
					KV=$KV2
				else
					KV=$KV4
				fi
				if [[ "$ADC" == "all" ]]; then
					adc1=$(getinfo adc1)
					adc2=$(getinfo adc2)
					adc3=$(getinfo adc3)
					adc4=$(getinfo adc4)					
					adc1=$(echo "scale=0;$adc1*$KV" | bc -l)
					adc2=$(echo "scale=0;$adc2*$KV" | bc -l)
					adc3=$(echo "scale=0;$adc3*$KV" | bc -l)
					adc4=$(echo "scale=0;$adc4*$KV" | bc -l)
					echo '{'
					echo "\"voltage1\": \"$adc1\","
					echo "\"voltage2\": \"$adc2\"",
					echo "\"voltage3\": \"$adc3\"",
					echo "\"voltage4\": \"$adc4\""
					echo '}'
				else
					adc1=$(getinfo $ADC)
					adc1=$(echo "scale=0;$adc1*$KV" | bc -l)
					echo '{'
					echo "\"value\": \"$adc1\""
					echo '}'
				fi
			;;
			resist)
				read input;
				json_load "$input"
				json_get_var ADC adc
				if [[ "$ADC" == "all" ]]; then
					adc1=$(getinfo adc1)
					adc1=$(echo "scale=0;$adc1*1.1" | bc -l)
					adc2=$(getinfo adc2)
					adc2=$(echo "scale=0;$adc2*1.1" | bc -l)
					adc3=$(getinfo adc3)
					adc3=$(echo "scale=0;$adc3*1.1" | bc -l)
					adc4=$(getinfo adc4)
					adc4=$(echo "scale=0;$adc4*1.1" | bc -l)
					echo '{'
					echo "\"adc1(Ohm)\": \"$adc1\","
					echo "\"adc2(Ohm)\": \"$adc2\"",
					echo "\"adc3(Ohm)\": \"$adc3\"",
					echo "\"adc4(Ohm)\": \"$adc4\""
					echo '}'
				else
					adc1=$(getinfo $ADC)
					adc1=$(echo "scale=0;$adc1*1.1" | bc -l)
					echo '{'
					echo "\"value\": \"$adc1\""
					echo '}'
				fi
			;;
		esac
	;;
esac
